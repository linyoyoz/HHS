  <thead>
    <tr>
      <th>地區</th>
	  <th>勾選</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
	
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.name %></td>
 
		<!-表示讓house.hid的值給予choose-!>
		<td><%= check_box_tag 'choose[]', house.hid  %>
	  </tr>
    <% end %>
	
  </tbody>
</table>
<%= submit_tag "創建" %>
<% end %>
